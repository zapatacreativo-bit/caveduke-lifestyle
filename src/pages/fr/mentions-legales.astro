---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/fr/Navbar.astro';
import Footer from '../../components/fr/Footer.astro';
---

<BaseLayout title="Mentions Légales | Caveduke" description="Mentions légales de Caveduke. Conditions d'utilisation du site web, propriété intellectuelle et législation applicable." lang="fr">
	<Navbar />
	
	<main class="bg-[var(--color-noir)] pt-40 pb-24 px-6 md:px-12">
		<article class="max-w-4xl mx-auto prose-legal">
			
			<div class="flex items-center gap-4 mb-8">
