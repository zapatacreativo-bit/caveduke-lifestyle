---
// src/components/Footer.astro
import { Instagram, Linkedin, Facebook } from 'lucide-react';
---
<footer class="bg-[#050505] pt-24 pb-8 px-6 md:px-12 border-t border-[var(--color-gold)]/20">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-start gap-16 mb-16">
    
    <div class="max-w-xs">
      <div class="flex items-center gap-3 mb-6">
        <svg viewBox="0 0 100 160" fill="none" class="w-6 h-10">
          <path d="M30 140 L30 40 L50 20 L70 40 L70 140 Z M20 140 L80 140" 
                stroke="var(--color-gold)" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" />
          <circle cx="50" cy="10" r="8" fill="var(--color-gold)" />
        </svg>
        <div class="flex flex-col">
          <span class="font-display text-2xl tracking-[0.15em] text-[var(--color-ivory)] uppercase">Caveduke</span>
          <span class="font-accent text-xs tracking-[0.25em] text-[var(--color-gold)] mt-1">Est. 1985</span>
        </div>
      </div>
      <p class="text-sm font-body text-[var(--color-silver)]/70 leading-relaxed">
        The most exclusive wine cabinet brand in the world. The Brand of the Tower. Handcrafted in Spain.
      </p>
    </div>

    <div class="flex flex-wrap gap-16">
      <div>
        <h4 class="font-accent text-[var(--color-ivory)] tracking-widest uppercase mb-6 text-sm">Navigation</h4>
        <ul class="flex flex-col gap-4">
          {[
            { label: 'Heritage', href: '#heritage' },
            { label: 'Collections', href: '#collections' },
            { label: 'Wine Cabinets ↗', href: 'https://caveduke.com/' },
            { label: 'Contact', href: '#contact' }
          ].map(link => (
            <li>
              <a href={link.href} class="text-sm text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors" target={link.href.startsWith('http') ? '_blank' : undefined} rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-accent text-[var(--color-ivory)] tracking-widest uppercase mb-6 text-sm">Contact</h4>
        <div class="flex flex-col gap-6">
          <div>
            <p class="text-sm text-[var(--color-ivory)] mb-1">Headquarters</p>
            <p class="text-xs text-[var(--color-silver)]/70 leading-relaxed">
              C/ Juan Ramón Jiménez, 34<br/>
              08100 Mollet del Vallés (Barcelona)<br/>
              Spain
            </p>
          </div>
          <div>
            <p class="text-xs text-[var(--color-silver)]/70 leading-relaxed">
              <span class="text-[var(--color-ivory)] block mb-1">Hours</span>
              Monday – Saturday: 10am – 7pm
            </p>
          </div>
          <div class="flex flex-col gap-2">
            <a href="mailto:caveduke@caveduke.com" class="text-xs text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors">caveduke@caveduke.com</a>
            <a href="tel:+34697182482" class="text-xs text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors">(+34) 697 182 482</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto pt-8 border-t border-[var(--color-silver)]/10 flex flex-col md:flex-row justify-between items-center gap-6">
    <p class="text-xs text-[var(--color-silver)]/50">
      &copy; {new Date().getFullYear()} Caveduke. All rights reserved. · <a href="/en/privacy-policy" class="hover:text-[var(--color-gold)] transition-colors">Privacy Policy</a> · <a href="/en/legal-notice" class="hover:text-[var(--color-gold)] transition-colors">Legal Notice</a>
    </p>

    <div class="flex items-center gap-8">
      <a href="https://instagram.com/cavedukevinotecas" target="_blank" rel="noopener noreferrer" class="text-[var(--color-silver)]/60 hover:text-[var(--color-gold)] transition-colors duration-300">
        <Instagram size={22} />
      </a>
      <a href="#" target="_blank" rel="noopener noreferrer" class="text-[var(--color-silver)]/60 hover:text-[var(--color-gold)] transition-colors duration-300">
        <Linkedin size={22} />
      </a>
      <a href="#" target="_blank" rel="noopener noreferrer" class="text-[var(--color-silver)]/60 hover:text-[var(--color-gold)] transition-colors duration-300">
        <Facebook size={22} />
      </a>
    </div>
  </div>
</footer>
