---
// src/components/Preloader.astro
---
<div id="preloader" class="fixed inset-0 z-[100] flex flex-col items-center justify-center bg-[var(--color-noir)]">
  <div class="mb-8 opacity-0" id="preloader-logo">
    <img 
      src="/images/logo-caveduke.png" 
      alt="Caveduke" 
      class="h-20 md:h-28 w-auto brightness-0 invert"
    />
  </div>
  
  <p id="preloader-est" class="font-accent text-sm text-[var(--color-gold)] mt-4 tracking-[0.25em] opacity-0">
    EST. 1985
  </p>
</div>

<style>
  /* removed old SVG styles */
</style>

<script>
  import { gsap } from 'gsap';

  window.addEventListener('load', () => {
    const tl = gsap.timeline();

    tl.to('#preloader-logo', {
      opacity: 1,
      duration: 1.2,
      ease: 'power2.out'
    })
    .to('#preloader-est', {
      opacity: 1,
      duration: 0.6,
      ease: 'power2.out'
    }, '-=0.4')
    .to('#preloader', {
      yPercent: -100,
      duration: 1,
      ease: 'power4.inOut',
      delay: 0.6
    });
  });
</script>
