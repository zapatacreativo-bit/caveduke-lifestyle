---
// src/components/Footer.astro
import { Instagram, Linkedin, Facebook } from 'lucide-react';
---
<footer class="bg-[#050505] pt-24 pb-8 px-6 md:px-12 border-t border-[var(--color-gold)]/20">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-start gap-16 mb-16">
    
    <div class="max-w-xs">
      <div class="flex items-center gap-3 mb-6">
        <img 
          src="/images/logo-caveduke.png" 
          alt="Caveduke Logo" 
          class="h-12 w-auto brightness-0 invert opacity-80 hover:opacity-100 transition-opacity duration-300"
        />
      </div>
      <p class="text-sm font-body text-[var(--color-silver)]/70 leading-relaxed">
        La marca de vinotecas más exclusiva del mundo. The Brand of the Tower. Handcrafted in Spain.
      </p>
    </div>

    <div class="flex flex-wrap gap-16">
      <div>
        <h4 class="font-accent text-[var(--color-ivory)] tracking-widest uppercase mb-6 text-sm">Navegación</h4>
        <ul class="flex flex-col gap-4">
          {['Legado', 'Colecciones', 'Contacto'].map(link => (
            <li>
              <a href={`#${link.toLowerCase()}`} class="text-sm text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors">
                {link}
              </a>
            </li>
          ))}
          <li>
            <a href="https://caveduke.com/" target="_blank" rel="noopener noreferrer" class="text-sm text-[var(--color-gold)]/80 hover:text-[var(--color-gold)] transition-colors">
              Vinotecas ↗
            </a>
          </li>
          <li>
            <a href="https://www.instagram.com/cavedukevinotecas" target="_blank" rel="noopener noreferrer" class="text-sm text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors">
              Instagram
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h4 class="font-accent text-[var(--color-ivory)] tracking-widest uppercase mb-6 text-sm">Contacto</h4>
        <div class="flex flex-col gap-6">
          <div>
            <p class="text-sm text-[var(--color-ivory)] mb-1">Sede Central</p>
            <p class="text-xs text-[var(--color-silver)]/70 leading-relaxed">
              C/ Juan Ramón Jiménez, 34<br/>
              08100 Mollet del Vallés (Barcelona)<br/>
              España
            </p>
          </div>
          <div>
            <p class="text-xs text-[var(--color-silver)]/70 leading-relaxed">
              <span class="text-[var(--color-ivory)] block mb-1">Horario</span>
              Lunes – Sábado: 10am – 7pm
            </p>
          </div>
          <div class="flex flex-col gap-2">
            <a href="mailto:caveduke@caveduke.com" class="text-xs text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors">caveduke@caveduke.com</a>
            <a href="tel:+34697182482" class="text-xs text-[var(--color-silver)]/70 hover:text-[var(--color-gold)] transition-colors">(+34) 697 182 482</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Firma -->
  <div class="max-w-7xl mx-auto py-12 flex flex-col items-center text-center">
    <img src="/images/logo-caveduke.png" alt="Caveduke" class="h-16 w-auto brightness-0 invert opacity-60 mb-4" />
    <p class="font-accent text-[var(--color-gold)]/50 tracking-[0.3em] uppercase text-[10px]">The Brand of the Tower · Since 1985</p>
  </div>

  <!-- Google Maps -->
  <div class="max-w-7xl mx-auto mb-16">
    <div class="w-full h-64 md:h-80 rounded-sm overflow-hidden border border-[var(--color-gold)]/20">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2984.8!2d2.1908!3d41.5427!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4b9c5a6b7c8d9%3A0x1234567890abcdef!2sC%2F%20Juan%20Ram%C3%B3n%20Jim%C3%A9nez%2C%2034%2C%2008100%20Mollet%20del%20Vall%C3%A8s%2C%20Barcelona!5e0!3m2!1ses!2ses!4v1709060000000!5m2!1ses!2ses" 
        width="100%" 
        height="100%" 
        style="border:0; filter: grayscale(80%) invert(92%) contrast(83%);" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        title="Ubicación Caveduke - Mollet del Vallés, Barcelona"
      ></iframe>
    </div>
  </div>

  <div class="max-w-7xl mx-auto pt-8 border-t border-[var(--color-silver)]/10 flex flex-col md:flex-row justify-between items-center gap-6">
    <p class="text-xs text-[var(--color-silver)]/50">
      &copy; {new Date().getFullYear()} Caveduke. Todos los derechos reservados. · <a href="/politica-de-privacidad" class="hover:text-[var(--color-gold)] transition-colors">Política de Privacidad</a> · <a href="/aviso-legal" class="hover:text-[var(--color-gold)] transition-colors">Aviso Legal</a>
    </p>

    <div class="flex items-center gap-8">
      <a href="https://instagram.com/cavedukevinotecas" target="_blank" rel="noopener noreferrer" class="text-[var(--color-silver)]/60 hover:text-[var(--color-gold)] transition-colors duration-300">
        <Instagram size={22} />
      </a>
      <a href="#" target="_blank" rel="noopener noreferrer" class="text-[var(--color-silver)]/60 hover:text-[var(--color-gold)] transition-colors duration-300">
        <Linkedin size={22} />
      </a>
      <a href="#" target="_blank" rel="noopener noreferrer" class="text-[var(--color-silver)]/60 hover:text-[var(--color-gold)] transition-colors duration-300">
        <Facebook size={22} />
      </a>
    </div>
  </div>
</footer>
